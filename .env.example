# Database
DATABASE_URL="postgresql://mahajan:mahajan123@localhost:5432/mahajan_logistics?schema=public"

# Redis (REQUIRED in production for token blacklisting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Server
PORT=3000
NODE_ENV=development

# JWT
# IMPORTANT: In production, JWT_SECRET must be at least 32 characters
# Use a strong random string: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_SECRET=  # Optional: separate secret for access tokens (falls back to JWT_SECRET)
JWT_ACCESS_EXPIRATION=15m
REFRESH_TOKEN_EXPIRY_DAYS=30

# MSG91 OTP Service
MSG91_AUTH_KEY=your-msg91-auth-key
MSG91_WIDGET_ID=your-msg91-widget-id
MSG91_TOKEN_AUTH=your-msg91-token-auth

# Storage: AWS S3, Cloudflare R2, or MinIO (local dev)
# For MinIO (local): AWS_S3_ENDPOINT=http://localhost:9000
# For Cloudflare R2: AWS_S3_ENDPOINT=https://<account_id>.r2.cloudflarestorage.com
# For AWS S3: Remove AWS_S3_ENDPOINT entirely
AWS_REGION=auto  # Use 'auto' for R2, or specific region for AWS S3
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_S3_BUCKET=mahajan-logistics
AWS_S3_ENDPOINT=http://localhost:9000

# CDN/Public URL (optional - enables fast public access without presigned URLs)
# For R2: Use your R2 public bucket URL (e.g., https://pub-xxx.r2.dev)
# Or use a custom domain pointed to R2/CloudFront
# S3_PUBLIC_URL=https://files.yourdomain.com

# CloudFront CDN (for AWS S3 users - optional)
# Leave all three empty to disable CloudFront and use S3 presigned URLs
# CLOUDFRONT_DOMAIN=d1234abcd.cloudfront.net
# CLOUDFRONT_KEY_PAIR_ID=K2JCJMDEHXQW5F
# CLOUDFRONT_PRIVATE_KEY=  # Base64 encoded PEM private key
# To encode: cat private_key.pem | base64 -w 0 (Linux) or [Convert]::ToBase64String([IO.File]::ReadAllBytes("private_key.pem")) (PowerShell)

# CORS
# IMPORTANT: In production, set this to your frontend domain(s)
# Multiple origins can be comma-separated: https://app.example.com,https://admin.example.com
# NEVER use "*" in production
CORS_ORIGIN=http://localhost:3001

# File Upload (in bytes, 10MB = 10485760)
MAX_FILE_SIZE=10485760
